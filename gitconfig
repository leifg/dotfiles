[user]
  name = Leif Gensert
  signingkey = 337AE6CB4383FA63
  email = leif@leif.io
[core]
  editor = vim
  pager = delta
  excludesfile = /Users/leifg/.gitignore_global
  attributesfile = /Users/leifg/.gitattributes
[diff]
[color]
  ui = auto
[alias]
  alias = !git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
  git = !git
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  branches = for-each-ref --sort=-committerdate refs/heads/
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git

  # shows the current branch in short form
  cb = rev-parse --abbrev-ref HEAD

  # Divergence (commits we added and commits remote added)
  div = divergence

  # Goodness (summary of diff lines added/removed/total)
  gn = goodness
  gnc = goodness --cached

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all

  # branch compare
  # compares two branches and shows the commit
  # reference: https://til.hashrocket.com/posts/18139f4f20-list-different-commits-between-two-branches
  bc =  "!f() {  git log --left-right --graph --cherry-pick --oneline ${1}...${2}; }; f"

[mergetool]
  keepBackup = false
[merge]
  tool = opendiff
[push]
  default = simple
[github]
  user = leifg
[ghi]
  token = !security find-internet-password -a leifg -s github.com -l 'ghi token' -w
[commit]
  gpgsign = true
[diff]
  compactionHeuristic = 1
  tool = Kaleidoscope
[interactive]
  diffFilter = delta --color-only
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[pull]
	rebase = false

[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse
  side-by-side = false
  line-numbers = true

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none
